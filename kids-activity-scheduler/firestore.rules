rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user has access (owner or shared)
    function hasAccess(resource) {
      return request.auth != null && (
        request.auth.uid == resource.data.userId ||
        (resource.data.sharedWith != null && request.auth.uid in resource.data.sharedWith)
      );
    }
    
    // Helper function to check if user can create (must be owner)
    function canCreate(resource) {
      return request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can access children they own or that are shared with them
    match /children/{childId} {
      allow read: if hasAccess(resource);
      allow update, delete: if hasAccess(resource);
      allow create: if canCreate(request.resource);
    }
    
    // Users can access activities they own or that are shared with them
    match /activities/{activityId} {
      allow read: if hasAccess(resource);
      allow update, delete: if hasAccess(resource);
      allow create: if canCreate(request.resource);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}